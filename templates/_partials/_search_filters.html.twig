{# Search filters on reservations > results pages #}

{# Search filters form #}
{{ form_start(filtersForm, {'method': 'get', 'attr': {'class': 'filter-form'}}) }}
<aside>
	<div>
		<div>
			{{ form_row(filtersForm.date) }}
			{{ form_row(filtersForm.address_start) }}
            {{ form_row(filtersForm.address_end) }}
		</div>
		{{ form_row(filtersForm.isEcological) }}
	</div>
	<div>
		{{ form_row(filtersForm.price) }}
	</div>
	<div>
		{{ form_row(filtersForm.rate) }}
	</div>
	<div>
		{{ form_row(filtersForm.begin) }}
	</div>
	<button type="submit" class="btn btn-primary me-2 mb-2">Appliquer</button>
	{{ form_end(filtersForm) }}
</aside>