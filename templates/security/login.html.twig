{% extends 'base.html.twig' %}

{% block title %}Connexion
{% endblock %}

{% block importmap %}
	{{ importmap(['app', 'login']) }}
{% endblock %}

{% block body %}
	<form method="post">
		{% if error %}
			<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		{% if app.user %}
			<div class="mb-3">
				Vous êtes déjà connecter en tant que
				{{ app.user.userIdentifier }},
				<a href="{{ path('app_logout') }}">Me déconnecter</a>
			</div>
		{% endif %}

		<h1 class="h3 mb-3 font-weight-normal">Connexion</h1>
		<label for="username">Email</label>
		<input type="email" value="{{ last_username }}" name="_email" id="email" class="form-control" autocomplete="email" required autofocus>
		<label for="password">Mot de passe</label>
		<input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
		<input
		type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">

		{#
		            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
		            See https://symfony.com/doc/current/security/remember_me.html
		
		            <div class="checkbox mb-3">
		                <input type="checkbox" name="_remember_me" id="_remember_me">
		                <label for="_remember_me">Remember me</label>
		            </div>
		        #}

		<button class="btn btn-lg btn-primary" id="login-button" type="submit" disabled>
			Connexion
		</button>
	</form>
	<a href="{{ path('forgotten_password') }}" class="a-link fw-bold text-decoration-none small">Mot de passe oublié ?</a>
	<div class="text-center">
		<span class="text-muted">Pas encore de compte ?</span>
		<a href="{{ path('app_register') }}" class="a-link fw-bold text-decoration-none ms-1">S'inscrire</a>
	</div>
{% endblock %}
