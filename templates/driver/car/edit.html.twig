{% extends 'base.html.twig' %}

{% block title %}Modifier votre véhicule{% endblock %}

{% block body %}
<main class="wrapper container-fluid">
    <div class="row">

       {% include "_partials/aside/_drivernav.html.twig" %}

        <div class="col-12 d-flex d-md-none align-items-center bg-info py-2">
            <button class="btn btn-outline-light ms-2" type="button" data-bs-toggle="offcanvas" data-bs-target="#driverOffcanvas" aria-controls="driverOffcanvas">
                <i class="fa fa-bars text-dark fs-4"></i>
            </button>
            <span class="text-dark fw-bold ms-3 fs-5">Menu chauffeur</span>
        </div>
        {% include "_partials/aside/_offcanvas_drivernav.html.twig" %}

        <!-- Drivercar Form -->
        <div class="col-12 col-md-9 col-lg-10">
            <section>
                <h1>Modifier votre véhicule</h1>
                <div>
                    {{ form_start(carForm) }}

                    {{ form_row(carForm.brand) }}
                    {{ form_row(carForm.model) }}
                    {{ form_row(carForm.color) }}
                    {{ form_row(carForm.seats) }}
                    {{ form_row(carForm.plate_number) }}
                    {{ form_row(carForm.first_registration) }}
                    {{ form_row(carForm.energy) }}

                    <div class="mt-3">
                        <button class="btn btn-secondary" type="submit">Modifier</button>
                    </div>
                    {{ form_end(carForm) }}
                </div>
            </section>
        </div>
    </div>
</main>
{% endblock %}