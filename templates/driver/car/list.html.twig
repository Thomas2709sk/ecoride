{% extends 'base.html.twig' %}

{% block title %}Vos véhicule
{% endblock %}

{% block body %}
<section>
	<h1>Vos véhicule</h1>
	<div class="table-responsive">
    <table class="table table-striped table-success">
        <thead>
            <tr>
                <th>Marque</th>
                <th>Modèle</th>
                <th>Places</th>
                <th>Plaque</th>
                <th>Date Immat.</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for car in cars %}
                <tr>
                    <td>{{ car.brand }}</td>
                    <td>{{ car.model }}</td>
                    <td>{{ car.seats }}</td>
                    <td>{{ car.plateNumber}}</td>
                    <td>{{ car.firstRegistration|date('d/m/Y') }}</td>
                    <td>
                        <button class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#deleteModal-{{ car.id }}">Supprimer</button>
                        <button class="btn btn-warning btn-sm"><a href="{{ path('app_driver_car_edit', {id: car.id}) }}">Modifier</a></button>
                    </td>
                </tr>
                 {% include "_partials/modals/delete_cars_modals.html.twig" %}
            {% endfor %}
        </tbody>
    </table>
</div>
</section>
{% endblock %}
