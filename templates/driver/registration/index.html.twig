{% extends 'base.html.twig' %}

{% block title %}Vos préférences
{% endblock %}

{% block body %}
	<h1>Inscription en tant que chauffeur</h1>
	<p>Etape 1 sur 2</p>
	<p>Vous souhaitez devenir chauffeur ? Merci de renseigner différentes informations</p>

	<div>
	<!-- DriverPreferences Form -->
		{{ form_start(driverForm) }}
		<div class="mb-5">
			<label class="form-label">Animaux autorisés :</label>
			<div class="form-check">
				{{ form_widget(driverForm.animals, {'attr': {'class': 'form-check-input'}}) }}
			</div>
		</div>

		<div class="mb-5">
			<label class="form-label">Fumeurs autorisés :</label>
			<div class="form-check">
				{{ form_widget(driverForm.smoking, {'attr': {'class': 'form-check-input'}}) }}
			</div>
		</div>
		{{ form_row(driverForm.preferences) }}
		{{ form_row(carForm.energy) }}

		<div class="mt-3">
			<button class="btn btn-primary" type="submit">Envoyer</button>
		</div>
		{{ form_end(driverForm) }}
	</div>
{% endblock %}
