{% extends 'base.html.twig' %}

{% block title %}Vos préférences{% endblock %}

{% block body %}
<main class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8 col-12">
            <div class="card shadow-lg p-4 px-sm-5 border border-2 bg-info">
                <h1 class="text-center text-white mb-2">Inscription en tant que chauffeur</h1>
                <p class="text-center text-white fs-5 mb-1">Etape 1 sur 2</p>
                <p class="text-center text-white fs-5 mb-4">Vous souhaitez devenir chauffeur ? Merci de renseigner différentes informations</p>

                {{ form_start(driverForm) }}

                <div class="mb-4">
                    {{ form_row(driverForm.animals, {
                        'label_attr': {'class': 'form-label text-white'},
                        'row_attr': {'class': 'mb-0'}
                    }) }}
                </div>

                <div class="mb-4">
                    {{ form_row(driverForm.smoking, {
                        'label_attr': {'class': 'form-label text-white'},
                        'row_attr': {'class': 'mb-0'}
                    }) }}
                </div>

                <div class="mb-4">
                    {{ form_row(driverForm.preferences, {
                        'label_attr': {'class': 'form-label text-white'},
                        'row_attr': {'class': 'mb-0'}
                    }) }}
                </div>

                <div class="mt-3">
                    <button class="btn btn-secondary rounded w-100" type="submit">Envoyer</button>
                </div>
                {{ form_end(driverForm) }}
            </div>
        </div>
    </div>
</main>
{% endblock %}