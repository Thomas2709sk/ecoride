{% extends 'base.html.twig' %}

{% block title %}Votre avis
{% endblock %}

{% block importmap %}
	{{ importmap(['app', 'reviewStar' ]) }}
{% endblock %}

{% block body %}
<main>
	<h1 class="ms-3">Noter votre chauffeur</h1>
	{# Review page for confirmation of Yes for user reservation #}
    <section class="container">
    <p class="fs-5">Votre chauffeur {{ carpool.driver.user.pseudo }} souhaite avoir un avis pour s'améliorer</p>
    <p class="fs-5">Pour la journée du {{ carpool.day.format('d/m/Y') }}</p>
	{# Reviews guide form #}
	{{ form_start(reviewForm) }}
	{{ form_widget(reviewForm.rate) }}
	{# ReviewStar.js #}
	<div id="stars" class="d-flex mt-3 text-info justify-content-center stars">
		<i class="fa-solid fa-star star fs-1" data-value="1"></i>
		<i class="fa-solid fa-star star fs-1" data-value="2"></i>
		<i class="fa-solid fa-star star fs-1" data-value="3"></i>
		<i class="fa-solid fa-star star fs-1" data-value="4"></i>
		<i class="fa-solid fa-star star fs-1" data-value="5"></i>
	</div>
	<p id="note-text" class="text-center mt-2">Note: 0 sur 5</p>

	{{ form_row(reviewForm.commentary) }}
	<button type="submit" class="btn btn-primary">Envoyer</button>
	{{ form_end(reviewForm) }}
    </section>
</main>
{% endblock %}
