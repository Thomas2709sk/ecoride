{% extends 'base.html.twig' %}

{% block title %}Votre avis
{% endblock %}

{% block importmap %}
	{{ importmap(['app', 'reviewStar' ]) }}
{% endblock %}

{% block body %}
<main class="wrapper mb-5">
	<h1 class="text-center mt-4">Noter votre chauffeur</h1>
    <section class="container mt-4 d-flex justify-content-center">
        <div class="card bg-info text-center text-white shadow-lg col-lg-7 col-md-9 col-12 p-4">
            <p class="fs-5">Votre trajet avec <b>{{ carpool.driver.user.pseudo }}</b> c'est mal déroulé</p>
            <p class="fs-5">Le {{ carpool.day.format('d/m/Y') }}</p>
            <p class="fs-5">Dites nous pourquoi :</p>
            <!-- Review guide form -->
            {{ form_start(reviewForm) }}
            {{ form_widget(reviewForm.rate) }}
            <!-- ReviewStar.js -->
            <div id="stars" class="d-flex mt-3  justify-content-center stars">
                <i class="fa-solid fa-star star fs-1" data-value="1"></i>
                <i class="fa-solid fa-star star fs-1" data-value="2"></i>
                <i class="fa-solid fa-star star fs-1" data-value="3"></i>
                <i class="fa-solid fa-star star fs-1" data-value="4"></i>
                <i class="fa-solid fa-star star fs-1" data-value="5"></i>
            </div>
            <p id="note-text" class="text-center mt-2">Note: 0 sur 5</p>
            {{ form_row(reviewForm.commentary) }}
            <div class="d-flex justify-content-center mt-3">
                <button type="submit" class="btn btn-secondary">Envoyer</button>
            </div>
            {{ form_end(reviewForm) }}
        </div>
    </section>
</main>
{% endblock %}